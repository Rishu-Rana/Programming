class Solution
{
    //Function to count the number of possible triangles.
    static int findNumberOfTriangles(int arr[], int n)
    {
          int sum=0,k=0;
        
        Arrays.sort(arr);
        
        for(int i=0;i<n-2;i++){
            k=i+2;
            for(int j=i+1;j<n-1;j++){
                while(k<n && arr[i]+arr[j]>arr[k])
                 k++;
                 
                 if(k>j)
                  sum+=k-j-1;
            }
        }
        return sum;
    }
}
